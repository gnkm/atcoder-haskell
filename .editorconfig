# http://editorconfig.org
# 参考: https://gitlab.haskell.org/ghc/ghc/-/blob/master/.editorconfig

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true

[*.hs]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.txt]
insert_final_newline = false
